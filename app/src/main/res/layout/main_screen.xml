<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.LangApp.Alter"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        style="@style/HeaderBox"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avPlaceholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:background="@color/deep_blue"
            android:src="@drawable/placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/greeting"
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avPlaceholder"
            android:layout_marginTop="12dp"
            android:text="Hello, User!"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="@+id/avPlaceholder"
            app:layout_constraintTop_toBottomOf="@+id/avPlaceholder" />

        <TextView
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Are you ready for learning today?"
            android:textColor="#B6B6B6"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/greeting"
            app:layout_constraintTop_toBottomOf="@+id/greeting" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/usersBlock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/usersLabel"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Top users"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:id="@+id/userOne"
                android:background="@drawable/rounded_input"
                app:layout_constraintStart_toStartOf="@+id/usersLabel"
                app:layout_constraintTop_toBottomOf="@+id/usersLabel">

                <TextView
                    style="@style/MainText"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="👨🏻‍🎨"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/MainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="Vincent van Gogh"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    style="@style/MainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:paddingStart="80dp"
                    android:text="12 points"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/userTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_input"
                app:layout_constraintStart_toStartOf="@+id/userOne"
                app:layout_constraintTop_toBottomOf="@+id/userOne">

                <TextView
                    style="@style/MainText"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="👨🏻‍🎨"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/MainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="Vincent van Gogh"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    style="@style/MainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:paddingStart="80dp"
                    android:text="12 points"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/userThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_input"
                app:layout_constraintStart_toStartOf="@+id/userTwo"
                app:layout_constraintTop_toBottomOf="@+id/userTwo">

                <TextView
                    style="@style/MainText"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="👨🏻‍🎨"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/MainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="Vincent van Gogh"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    style="@style/MainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:paddingStart="80dp"
                    android:text="12 points"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toBottomOf="@+id/usersBlock"
            >

            <TextView
                android:id="@+id/excersiseLabel"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Available excersises"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/guessBlock"
                android:layout_width="150dp"
                android:layout_height="124dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/excersiseLabel">

                <ImageView
                    android:id="@+id/bear"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bear"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="58dp" />

                <TextView
                    style="@style/textPlain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bear"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Guess the animal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wordPracticeBlock"
                android:layout_width="150dp"
                android:layout_height="124dp"
                android:layout_marginStart="224dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/excersiseLabel">

                <ImageView
                    android:id="@+id/wordPractice"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/pencil"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="58dp" />

                <TextView
                    style="@style/textPlain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wordPractice"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Word practice" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="124dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guessBlock">

                <ImageView
                    android:id="@+id/audition"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ear"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="58dp" />

                <TextView
                    style="@style/textPlain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audition"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Audition" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="124dp"
                android:layout_marginStart="224dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_button"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wordPracticeBlock">

                <ImageView
                    android:id="@+id/game"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/game"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="58dp" />

                <TextView
                    style="@style/textPlain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/game"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Game" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
