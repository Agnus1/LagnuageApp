<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LangApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/deep_blue</item>
    </style>
    <style name="Theme.LangApp.Alter" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="TextSmallHeading">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:lineHeight">25dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TextSmallDescription">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">.6</item>
        <item name="android:lineHeight">17dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ButtonDefault">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">21dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonSmall">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">25dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="HeaderText">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="HeaderBox">
        <item name="android:background">@color/deep_blue</item>
    </style>
    <style name="LoginHeader">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight">30dp</item>
    </style>
    <style name="TextInputLabel">
        <item name="android:textColor">@color/dark_lighter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:layout_marginStart">29dp</item>
    </style>
    <style name="TextInput">
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textColorHint">@color/dark_grey_alpha_50</item>
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="MainText">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">25dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="textPlain">
        <item name="android:fontFamily">@font/fredoka_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">23dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>